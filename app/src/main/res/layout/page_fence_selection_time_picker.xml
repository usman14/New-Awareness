<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:id="@+id/edt_medicalid_numberpickerunit"
            android:enabled="false"
            android:layout_marginStart="20dp"

            android:background="@android:color/transparent"
            />
        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginStart="20dp"
            android:id="@+id/edt_medicalid_numberpickerunit_minute"
            android:enabled="false"
            android:layout_toEndOf="@id/edt_medicalid_numberpickerunit"
            android:background="@android:color/transparent"
            />

        <NumberPicker
            android:id="@+id/np_medicalid_numberPicker_minute"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_medicalid_numberpickerunit_minute"
            android:layout_toEndOf="@id/np_medicalid_numberPicker"
            android:layout_marginBottom="5dp"
            android:layout_margin="20dp"
            android:gravity="center_horizontal" />

        <NumberPicker
            android:id="@+id/np_medicalid_numberPicker"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_medicalid_numberpickerunit"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/btn_medicalid_numberpicker"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="@string/OK"
            android:background="@null"
            android:layout_below="@+id/np_medicalid_numberPicker"
            android:layout_alignStart="@id/edt_medicalid_numberpickerunit"/>

        <Button
            android:id="@+id/btn_medicalid_numberpickercancel"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="@string/cancel"
            android:background="@null"
            android:layout_alignTop="@+id/btn_medicalid_numberpicker"
            android:layout_toRightOf="@id/btn_medicalid_numberpicker"
            android:layout_alignStart="@id/edt_medicalid_numberpickerunit_minute"
           />



    </RelativeLayout>